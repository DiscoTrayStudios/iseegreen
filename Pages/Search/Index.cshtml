@page
@model csci340_iseegreen.Pages.Search.IndexModel

@{
    ViewData["Title"] = "Search";
}
<br>

<h1>Search</h1>

<form>
    <p>
        <label for="SearchString">Search by Species:</label>
        <input type="text" asp-for="SearchString" />
        
        <label for="FamilyString">Search by Family:</label>
        <input type="text" asp-for="FamilyString" />
        
        <label for="CategoryFilter">Filter by Category:</label>
        <select asp-for="CategoryFilter" asp-items="Model.Categories">
            <option value="">All</option>
            @foreach ((string cat, string desc) in Model.CategoryOptions)
            {
                <option value="@cat">@desc</option>
            }
        </select>

        <input type="submit" value="Apply Filters" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].Genus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].SpecificEpithet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].InfraspecificEpithet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].TaxonRank)
            </th>


<!--
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].HybridGenus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].HybridSpecies)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].USDAsymbol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taxa[0].USDAsynonym)
            </th> -->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Taxa) {
        <tr>
        
            <td>
                @Html.DisplayFor(modelItem => item.GenusID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecificEpithet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfraspecificEpithet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaxonRank)
            </td>
            

            <td>
                @Html.DisplayFor(modelItem => item.HybridGenus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HybridSpecies)
            </td>
    
        </tr>
}
    </tbody>
</table>