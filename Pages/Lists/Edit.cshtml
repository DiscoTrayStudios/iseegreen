@page
@model csci340_iseegreen.Pages_Lists.EditModel

@{
    ViewData["Title"] = "Edit";
}

<br> 
<div id="header_box">
<h1 id="search_heading">Edit List</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lists.Id" />
            <div class="form-group">
                <label asp-for="Lists.Name" class="control-label"></label>
                <input asp-for="Lists.Name" class="form-control" />
                <span asp-validation-for="Lists.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lists.OwnerID" class="control-label"></label>
                <select asp-for="Lists.OwnerID" class="form-control" asp-items="ViewBag.OwnerID"></select>
                <span asp-validation-for="Lists.OwnerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
